# Database Configuration
# For development: Use Neon serverless database
# For production: Use PostgreSQL with Prisma

# Development (Neon) - Uncomment for dev environment
# DATABASE_URL="postgresql://username:password@ep-example.us-east-1.aws.neon.tech/dbname?sslmode=require"

# Production (PostgreSQL) - Default configuration
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# Environment (set to 'development' for Neon, 'production' for PostgreSQL)
NODE_ENV="development"

# Better Auth
BETTER_AUTH_SECRET="your-secret-key-here"
BETTER_AUTH_URL="http://localhost:4321"