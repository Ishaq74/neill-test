---
import { useState } from 'react';
---
<html lang="fr">
  <head>
    <title>Connexion Admin</title>
  </head>
  <body>
    <main class="flex flex-col items-center justify-center min-h-screen">
      <h1 class="text-2xl font-bold mb-4">Connexion Admin</h1>
      <form method="POST" action="/api/auth" class="flex flex-col gap-4 w-80 bg-white p-6 rounded shadow">
        <input name="email" type="email" placeholder="Email" required class="border px-3 py-2 rounded" />
        <input name="password" type="password" placeholder="Mot de passe" required class="border px-3 py-2 rounded" />
        <button type="submit" class="bg-primary text-white py-2 rounded">Se connecter</button>
      </form>
    </main>
  </body>
</html>
